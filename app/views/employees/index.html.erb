<!DOCTYPE html>
<html>
<head>
  <title>List of employees</title>
</head>
<body>
  <div>
  	<h1>Employees of <%= @company_name %></h1>
  	<h3><%= link_to "Add New Employee", new_company_employee_path(params[:company_id]) %></h3>
  </div>
  <%= render "user_logged_in" %>
  <br />
  <% if @company_employees.count > 0 %>
	  <table>
	  	<thead>
	  		<tr>
	  			<th></th>
	  			<th>Name</th>
	  			<th>Age</th>
	  			<th>Email</th>
	  			<th>Company</th>
	  			<th>Edit</th>
	  			<th>Delete</th>
	  		</tr>
	  	</thead>
	  	<tbody>
	  		<% count = 1 %>
	  		<% @company_employees.each do |company_employee| %>
	  		<tr>
	  			<td><%= count %></td>
	  			<td><%= company_employee.name %></td>
	  			<td><%= company_employee.age %></td>
	  			<td><%= company_employee.email %></td>
	  			<td><%= company_employee.company_id %></td>
	  			<td><%= link_to "Edit", edit_company_employee_path(company_employee.company_id, company_employee.id) %></td>
	  			<td><%= link_to "Delete", company_employee_path(company_employee.company_id, company_employee.id), method: :delete %></td>
	  		</tr>
	  		<% count += 1 %>
	  		<% end %>
	  	</tbody>
	  </table>
	  <%= will_paginate @company_employees %>
  <% else %>
  No Employees <br />
  <% end %>
  <%= link_to "Back", companies_path %>
</body>
</html>